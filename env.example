# Application Configuration
APP_NAME=Industrial Data Logger
APP_VERSION=1.0.0
LOG_LEVEL=INFO

# Database Configuration
DATABASE_PATH=data/datalogger.db
DATABASE_BACKUP_INTERVAL=24

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
API_DEBUG=false

# Modbus Device Configuration
# Update these IP addresses to match your actual sensor devices
SENSOR_1_IP=169.254.1.1
SENSOR_2_IP=169.254.1.2
SENSOR_3_IP=169.254.1.3

# Polling Configuration
DEFAULT_POLLING_INTERVAL=20
RETRY_ATTEMPTS=3
RETRY_DELAY=5

# Printer Configuration
PRINTER_ENABLED=true
PRINTER_NAME=USB_Thermal_Printer
PRINTER_CONNECTION=usb://0x0483/0x5740

# Reporting Configuration
CSV_ENABLED=true
PDF_ENABLED=true
EMAIL_ENABLED=false

# Security Configuration
API_KEY_REQUIRED=false
MAX_REQUESTS_PER_MINUTE=100 